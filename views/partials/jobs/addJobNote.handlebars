<main id="addJobNote">
    {{!--
    <div class='form-row'> --}} {{!--
        <div class="col-12"> --}}
            <h2>Add Job Note</h2>
            {{!-- </div> --}} {{!--
        <div class="col-12"> --}}
            <p>Select the account and job you want to add a note to</p>
            <p>Hover over any red icons to see the error message</p>
            {{!-- </div> --}} {{!-- </div> --}}
    <div class='row'>
        <div class="col-md-6">
            {{{accountselect}}}
        </div>
    </div>

    <div id='result' class="addJobNote mb-3 row">


    </div>
    <div id="addassetform" class="addassetform">
        <div class="row">

            <div class="col-md-6 mb-3">
                <label for="dateFormat">Date</label>
                <input type="date" class="form-control" id="dateFormat" placeholder="Date">
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="name">Note Title</label>
                <input type="text" class="form-control" id="name" placeholder="Fake Job Note">
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3 ">
                <label for="text">Note Text</label>
                <textarea type="textarea" rows="10" class="form-control" id="text" placeholder="Fake job note text here"></textarea>
            </div>
        </div>

        <div class="row">
            <button class="btn btn-primary" type="button" id="addJobNoteButton" data-action="add">Add Job</button>

        </div>
    </div>



</main>


