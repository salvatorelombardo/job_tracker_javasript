{{#if addAccountAsset}}
<main id='addAccountAsset'>
    <div class="updateAccount">
        <div class='form-row'>
            <div class="col-12">
                <h1>Add Account</h1>
            </div>
            <div class="col-12">
                <p>Enter your account information then click "Add Account"</p>
                <p>Hover over any red icons to see the error message</p>
            </div>
        </div>
        <button class="btn btn-secondary dropdown-toggle mb-4" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            Select account
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Account 1</a>
            <a class="dropdown-item" href="#">Account 2</a>
            <a class="dropdown-item" href="#">Account 3</a>
        </div>
        <form>
            <div class="form-row">
                <div class=" col-sm-8 mb-3">
                    <label for="validationDefault01">Asset Name</label>
                    <input type="text" class="form-control" id="validationDefault01" placeholder="Name" value="" required>
                </div>

                <div class="col-sm-5 input-group mb-3">

                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile03">
                        <label class="custom-file-label" for="inputGroupFile03"></label>
                    </div>
                </div>

            </div>
            <button class="btn btn-primary" type="submit">Add Asset</button>
        </form>

</main>
{{/if}}